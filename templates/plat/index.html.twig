{% extends 'base.html.twig' %}

{% block title %}Plat index
{% endblock %}

{% block body %}
	<img src=" {{ asset('img/img1.jpg') }}" class="img-fluide" alt="image plat"/>

	<h1>Plat index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Categorie</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for plat in plats %}
				<tr>
					<td>{{ plat.id }}</td>
					<td>{{ plat.nom }}</td>
					<td>
						{% if plat.Category.name is defined %}
							{{ plat.Category.name }}
						{% endif %}
					</td>
					<td>{{ plat.description }}</td>
					<td>
						<a href="{{ path('plat_show', {'id': plat.id}) }}" class="btn btn-success disabled">show</a>
						<a href="{{ path('plat_edit', {'id': plat.id}) }}" class="btn btn-danger disabled">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('plat_new') }}" class="btn btn-warning disabled">Create new</a>
{% endblock %}
